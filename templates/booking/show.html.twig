{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>PickLocation</th>
                <td>{{ booking.pickLocation }}</td>
            </tr>
            <tr>
                <th>PickDate</th>
                <td>{{ booking.pickDate ? booking.pickDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ReturnDate</th>
                <td>{{ booking.returnDate ? booking.returnDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ booking.car }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
