{% extends 'base.html.twig' %}

{% block title %}Contact AUTO RENT{% endblock %}

{% block body %}
    
    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Contactez-nous</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <!--== Contact Page Area Start ==-->
    <div class="contact-page-wrao section-padding">
        <div class="container">
            <div class="row">
                {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                 {% endfor %}
                <div class="col-lg-10 m-auto">
                    <div class="contact-form">
                      {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--== Contact Page Area End ==-->
    <!--== Map Area Start ==-->
      <head>
    <title>Simple Markers</title>
    
    <style type="text/css">
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }

      /* Optional: Makes the sample page fill the window. */
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
    <script>
      "use strict";

      /*initialise map*/

      function initMap() {
        const myLatLng = {
          lat: 48.8566969,
          lng: 2.3514616,
        };
        const epinayLatLng = {
          lat: 48.9525181,
          lng: 2.3145039,
        };
        const enghienLatLng = {
          lat: 48.9699732,
          lng: 2.3068482,
        };
        const meudonLatLng = {
          lat: 48.8126688,
          lng: 2.2385432,
        };
        const melunLatLng = {
          lat: 48.539927,
          lng: 2.6608169,
        };
        const map = new google.maps.Map(document.getElementById("map"), {
          zoom: 7,
          center: myLatLng,
        });
        new google.maps.Marker({
          position: myLatLng,
          map,
          title: "Paris",
        });
        new google.maps.Marker({
          position: epinayLatLng,
          map,
          title: "Epinay Sur Seine",
        });
        new google.maps.Marker({
          position: enghienLatLng,
          map,
          title: "Enghien Les Bains",
        });
        new google.maps.Marker({
          position: meudonLatLng,
          map,
          title: "Meudon",
        });
        new google.maps.Marker({
          position: melunLatLng,
          map,
          title: "Melun",
        });
      }
    </script>
  </head>
 
    <div id="map"></div>
       <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
       <script
         src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDILQQPtOZV-mk-CwzMZi8v8b2YtplM1Rk&callback=initMap&libraries=&v=weekly"
         defer>
        </script>
        <br>
        <br>
    <!--== Map Area End ==-->
{% endblock %}


