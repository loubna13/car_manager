{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ car.year }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ car.image }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ car.isNew ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">Revenir à la liste</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">Modifier</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
